<div class="strain-name">
    <h2>{{strain.strain_name}}</h2>
</div>
<section class="strain-container">
    {{#if logged_in}}
    <div class="strain-info">
        <div class="strain-img">
            <img src="{{strain.img}}" alt="{{strain.strain_name}}">
        </div>
        <div class="strain-text">
            <p>THC Level: {{strain.thc_level}}</p>
            <p>Strain Type: {{strain.strain_type.strain_name}}</p>
            <p>Usage: {{strain.usage.usage_name}}</p>
            <p>Effect: {{strain.effect.effect_name}}</p>
            <p>Aroma: {{strain.aroma.aroma_name}}</p>
        </div>
    </div>
    <div class="text">
        <h2>About {{strain.strain_name}}</h2>
        <p>{{strain.description}}</p>
    </div>
    <div class="review-section">
        <h2>Recent Reviews</h2>
         <hr>
        {{#each strain.user_strains}}
        <div class="reivew-card">
            <div class="review-header">
                  <h3>{{username}}</h3>
            </div>
            <div class="review-body">
                  <p>Rating: {{review.rating}}</p>
                  <p>{{review.comment}}</p>
                  <p>Created on {{format_date review.date_created}}</p>
            </div>
            <hr>
        {{/each}}

    </div>
    <div>
        <div class="row review-forms">
            <div>
                <h2><i class="fas fa-cannabis"></i> Leave a Review <i class="fas fa-cannabis"></i></h2>

                <form class="form review-form">
                    <div class="form-group">
                        <h3>Strain: {{strain.strain_name}}</h3>
                    </div>
                    <div class="form-group">
                        <select id="rating">
                            <option value="">Select a rating</option>
                            <option value="Excellent">Excellent</option>
                            <option value="Very Good">Very Good</option>
                            <option value="Average">Average</option>
                            <option value="Poor">Poor</option>
                            <option value="Terrible">Terrible</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="strain-comment">Comment</label>
                        <input class="comment-input" placeholder="Your Comment" type="text" id="comment" />
                    </div>
                    <div class="form-group">
                        <button class="review-btn" type="submit">Submit Review</button>
                    </div>
                </form>
            </div>
     </section>

            <script src="/js/add-review.js"></script>
        </div>
        {{/if}}