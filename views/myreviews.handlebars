{{#if reviews.length}}
<div class="review-container">
      {{#each reviews as |review|}}
      <div class="strain-card">
            <div class="strain-header">
                  <h3>{{strain_name}}</h3>
            </div>
            <div class="strain-body">
                  <p>Rating: {{rating}}</p>
                  <p>{{comment}}</p>
                  <small class="text-muted">Created on {{format_date date_created}}</small>
            </div>
      </div>
      {{/each}}
</div>
{{/if}}